<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">
    <factory>
        <exception-handler-factory>
            edu.itmo.ailab.semantic.r2rmapper.wi.exceptions.R2RMapperExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-action>#{navigationController.showBarPage}</from-action>
            <from-outcome>settings</from-outcome>
            <to-view-id>/pages/settings/settings.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.showBarPage}</from-action>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-action>#{navigationController.showEditSettingsPage}</from-action>
            <from-outcome>edit_settings</from-outcome>
            <to-view-id>/pages/settings/edit_settings.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
</faces-config>